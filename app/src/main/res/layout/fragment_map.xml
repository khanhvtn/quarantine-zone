<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.Map">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        android:id="@+id/google_map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/map_wrapperBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:weightSum="2">


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/map_btnRegister"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:background="@drawable/custom_button"
            android:text="Register" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/map_btnLogin"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/custom_button"
            android:text="Login" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:background="@drawable/wrapper_search"
        android:id="@+id/map_wrapperSearch"
        android:layout_below="@+id/map_wrapperBtn"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.SearchView
            android:background="@drawable/rounded_corner"
            android:id="@+id/map_edtSearch"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:paddingHorizontal="20dp"
            android:paddingStart="20dp"
            app:iconifiedByDefault="false"
            app:queryHint="Search your location" />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginBottom="20dp"
            android:visibility="gone"
            android:background="@color/white"
            android:id="@+id/map_edtSearchResult"
            android:paddingHorizontal="40dp"
            android:layout_below="@+id/map_edtSearch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.appcompat.widget.LinearLayoutCompat>


</RelativeLayout>